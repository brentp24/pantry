<div class="login-container">

  <div class="card" id="loginCard">
    <div class="columns">
      <div class="column is-5">
        <div class="card-content" id="loginHeight">
          <img src="assets/img/pantree_primary_logo.png" alt="pantree_brand" width="85%">
        </div>
      </div>


      <div class="column is-2" id="create">
        <form class="signup">
        <h2>Sign Up Form</h2>
          <div class="form-group">
            {{!-- <label for="exampleInputFirstName1">First Name</label> --}}
            <input type="firstName" class="form-control" id="first-name-input" placeholder="First Name">
          </div>
          {{!-- <label for="exampleInputLastName1">Last Name</label> --}}
          <input type="lastName" class="form-control" id="last-name-input" placeholder="Last Name">
          <div class="form-group">
            {{!-- <label for="exampleInputEmail1">Email address</label> --}}
            <input type="email" class="form-control" id="email-input" placeholder="Email">
          </div>
          <div class="form-group">
            {{!-- <label for="exampleInputPassword1">Password</label> --}}
            <input type="password" class="form-control" id="password-input" placeholder="Password">
          </div>
          <div style="display: none" id="alert" class="alert alert-danger" role="alert">
            <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
            <span class="sr-only">Error:</span> <span class="msg"></span>
          </div>
          <button type="submit" class="btn btn-default">Sign Up<a href="/login"></a></button>
        <p>Or log in <a href="/login"><span>here</span></a></p>
        </form>
        <br />
      </div>

      <div class="column is-5">
        <div class="card-content" id="loginHeight">
          <img src="assets/img/pantree_primary_logo.png" alt="pantree_brand" width="85%">
        </div>
      </div>






    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script type="text/javascript" src="assets/js/createAccount.js"></script>