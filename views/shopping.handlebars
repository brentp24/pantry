<div class="container is-fluid" id="shoppingContainer">
  <div class="columns">

    <div class="column is-4">
        <img src="assets/img/pantree_primary_logo.png" alt="pantree_brand" width="85%">
    </div>

    <div class="notification" id="shoppingNotification">
      <div class="column is-12">
        <section class="productSearchSection">
          <h2>Search for products to add to your shopping list:</h2>
          <form action="/search_product_shopping">
            <input type="search" name="product" placeholder="Broccoli, Bananas, Brownie Mix, etc...">
            <button type="submit">Search</button>
          </form>
        </section>
        {{#unless start}}
        {{#unless status}}
        <p>Item not found.</p>
        {{/unless}}

        {{#if status}}
        <form action="/add_to_shopping_list">
          {{#each productsFound}}
          <input type="checkbox" name="{{itemName}}" value="{{id}}" data-id="{{id}}" data-id="{{itemName}}"
            data-category="{{category}}" data-shelfLife="{{selfLife}}" data-clipartURL="{{clipartURL}}">
          <label for="{{itemName}}">{{itemName}}</label>
          <br>
          {{/each}}
          <input type="submit" value="Add to Shopping List">
        </form>
        {{/if}}
        {{/unless}}
        <h2>Shopping List</h2>
        <form action="/shopping_list_to_pantree">
          {{#each userShoppingList}}
          <input type="checkbox" name="{{itemName}}" value="{{id}}" data-id="{{id}}" data-id="{{itemName}}"
            data-category="{{category}}" data-clipartURL="{{clipartURL}}">
          <label for="{{itemName}}">{{itemName}}</label>
          <br>
          {{/each}}
          <input type="submit" value="Add to Pantree">
        </form>
      </div>
    </div>


    <div class="column is-4">
        <img src="assets/img/pantree_primary_logo.png" alt="pantree_brand" width="85%">
    </div>




  </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
