<h1>Recipes App</h1>

<ul>
  {{#each myRecipes}}
  	<li>
      <p><span class="label">Author:</span> {{this.authorName}}</p>
	  <p><span class="label">Recipe:</span> {{this.recipeName}}</p>

      <button data-id="{{this.id}}" class="delrecipe">Delete</button>

      <a href="/{{this.id}}">Update this Recipe</a>
	  <a href="/{{this.id}}">View this Recipe</a>
  	</li>
  {{/each}}
</ul>

<h2>Add a Recipe</h2>

<form class="create-form">

  <div class="form-group">
    <label for="auth">Author:</label>
    <input type="text" id="auth" name="author">
  </div>

  <div class="form-group">
    <label for="rec">Recipe Name:</label>
    <input id="rec" name="recipe"></input>
  </div>
  <div class="form-group">
    <label for="rec">Ingredients:</label>
    <input id="ing" name="ingredients"></input>
  </div>
  <div class="form-group">
    <label for="rec">Instructions:</label>
    <input id="ins" name="instructions"></input>
  </div>

  <button type="submit">Add Recipe</button>
</form>
